@model IEnumerable<Project.Models.Ticket>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>mytickets</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="nofollow" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">

    <style>
        tr:nth-child(even) {
            background-color: #dfebf6;
        }

        tr:nth-child(odd) {
            background-color: white;
        }

        /*td {*/
            /*text-align: center;*/
            /*padding-left: 50px;
            padding-right: 50px;
            width: 50%;
        }*/
        tr, td {
            text-align: center;
        }

        body {
            background: rgb(255, 255, 255, 0.3)
        }
    </style>

</head>
<body>

    <center>
        <h1>My Tickets</h1>

        <table class="table" border="0">
            <tr style="background-color: #669dd2">
                <th>
                    @*@Html.DisplayNameFor(model => model.flight_num)*@
                    <text style="color:white">Flight Number</text>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.num_of_tickets)*@
                    <text style="color:white">Number of Tickets</text>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.num_of_tickets)*@
                    <text style="color:white">Date & Time</text>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.num_of_tickets)*@
                    <text style="color:white">Destination Country</text>
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.num_of_tickets)*@
                    <text style="color:white">Origin Country</text>
                </th>
            </tr>

            @{ int i = 0; }

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.flight_num)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.num_of_tickets)
                    </td>
                    <td>
                        @ViewBag.flights[i].date_time
                    </td>
                    <td>
                        @ViewBag.flights[i].destination_country
                    </td>
                    <td>
                        @ViewBag.flights[i].origin_country
                    </td>
                </tr>

                { i++; }
            }

        </table>

    </center>
</body>
</html>
