@model Project.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <style>
        div {
            text-align: center;
        }

        .center {
            margin-left: auto;
            margin-right: auto;
        }

        td {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>

<body>
    <center>
        <h1>Login</h1>
    </center>
    <div>
        @using (Html.BeginForm("UserLogin", "Home", FormMethod.Post))

        {
            <table class="center">
                <tr>
                    <td><strong>Username:</strong></td>
                    <td> @Html.TextBoxFor(user => user.username)</td>
                </tr>
                <tr>
                    <td><strong>Password:</strong></td>
                    <td> @Html.PasswordFor(user => user.password)</td>
                </tr>

            </table>

            <br />

            <center>
                <input id="UserLogin" type="submit" value="Login" />
            </center>

        }
    </div>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }

    <br /><br />
    <center><a href="/">Go back</a></center>

</body>
</html>
