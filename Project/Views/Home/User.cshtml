@model Project.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.username</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="nofollow" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">

    <script>
        function resizeIframe(obj) {
            obj.style.height = obj.contentWindow.document.documentElement.scrollHeight + 'px';
        }
    </script>

    @*<style>
        a {
            text-decoration: none;
            color: blue;
        }
    </style>*@


</head>
<body>
    <div>
        <center>
            <h1>User Dashboard</h1>
            <p style="text-align: left; padding-left: 10px">
                <td><left>Hello @Model.username</left></td>
                <span style="float: right; padding-right: 10px">
                    <td><right><a href="/">Logout</a></right></td>
                </span>
            </p>
        </center>

        <center>
            <table>
                <tr>
                    <td>&emsp;</td>
                    <td><a href="/Home/SearchFlights" target="UserPages"><h4>Search Flights</h4></a></td>
                    <td>&emsp;</td>
                    <td>&emsp;</td>
                    @*<td><a href="/Home/ShowFlightsUser/@Model.username" target="UserPages"><h4>Show Flights</h4></a></td>*@
                    <td><a href="/Home/OrderUserFlights?username=@Model.username" target="UserPages"><h4>Show Flights</h4></a></td>
                    <td>&emsp;</td>
                    <td>&emsp;</td>
                    <td><a href="/Home/ShowTickets/@Model.username" target="UserPages"><h4>My Tickets</h4></a></td>
                    <td>&emsp;</td>
                </tr>
            </table>
        </center>

    </div>

    <iframe name="UserPages" frameborder="0" style="width: 100%; height: 100%;" scrolling="no" onload="resizeIframe(this)"></iframe>

</body>
</html>

