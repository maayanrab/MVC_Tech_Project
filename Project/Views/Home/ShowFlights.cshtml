@model IEnumerable<Project.Models.Flight>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>showflights</title>
</head>
<body>

    <center>
        <h1>Show Flights</h1>

        <table class="table" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.flight_num)
                </th>
                <th>
                    @Html.ActionLink("price", "OrderAdminFlights", new { sort = ViewBag.PriceSortParm })
                </th>
                <th>
                    @Html.ActionLink("destination_country", "OrderAdminFlights", new { sort = ViewBag.D_C_SortParm })
                </th>
                <th>
                    @Html.ActionLink("origin_country", "OrderAdminFlights", new { sort = ViewBag.O_C_SortParm })
                </th>
                <th>
                    @Html.ActionLink("date_time", "OrderAdminFlights", new { sort = ViewBag.DateSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.num_of_seats)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.flight_num)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.destination_country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.origin_country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.num_of_seats)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditFlights", new { id = item.flight_num }, new { flight_num = ViewBag.flight }) |
                        @Html.ActionLink("Remove", "RemoveFlights", new { id = item.flight_num }, new { flight_num = ViewBag.flight })
                    </td>
                </tr>
            }

        </table>

        @*<p>
            @Html.ActionLink("Create New", "AddFlights")
        </p>*@

    </center>
</body>
</html>
