@model Project.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.username</title>

    <script>
        function resizeIframe(obj) {
            obj.style.height = obj.contentWindow.document.documentElement.scrollHeight + 'px';
        }
    </script>

    <style>
        a {
            text-decoration: none;
            color: blue;
        }
    </style>

</head>
<body>
    <div>

        <center>

            <h1>Admin Dashboard</h1>
            <p style="text-align:left;">
                <td><left>Hello @Model.username</left></td>
                <span style="float:right;">
                    <td><right><a href="/">Logout</a></right></td>
                </span>
            </p>

            <table>
                <tr>
                    <td>&emsp;</td>
                    <td><a href="/Home/AddFlights" target="AdminPages"><h4>Add Flights</h4></a></td>
                    <td>&emsp;</td>
                    <td>&emsp;</td>
                    <td><a href="/Home/RemoveFlights" target="AdminPages"><h4>Remove Flights</h4></a></td>
                    <td>&emsp;</td>
                    <td>&emsp;</td>
                    <td><a href="/Home/EditFlights" target="AdminPages"><h4>Edit Flights</h4></a></td>
                    <td>&emsp;</td>
                    <td>&emsp;</td>
                    @*<td><a href="/Home/ShowFlights" target="AdminPages"><h4>Show Flights</h4></a></td>*@
                    <td><a href="/Home/OrderAdminFlights?username=@Model.username" target="AdminPages"><h4>Show Flights</h4></a></td>
                    <td>&emsp;</td>
                </tr>
            </table>
        </center>

    </div>

    <iframe name="AdminPages" frameborder="0" style="width: 100%; height: 100%;" scrolling="no" onload="resizeIframe(this)"></iframe>

</body>
</html>
