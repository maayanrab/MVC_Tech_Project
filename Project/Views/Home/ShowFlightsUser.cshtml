@model IEnumerable<Project.Models.Flight>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>showflights</title>
</head>
<body>

    <center>
        <h1>Show Flights</h1>

        <table class="table" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.flight_num)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.price)*@
                    @Html.ActionLink("price", "ShowFlight", new { sort = ViewBag.PriceSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.destination_country)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.origin_country)*@
                    @Html.ActionLink("origin_country", "ShowFlight", new { sort = ViewBag.NameSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date_time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.num_of_seats)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.flight_num)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.destination_country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.origin_country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.num_of_seats)
                    </td>
                    <td>
                        @Html.ActionLink("Book Flight", "BookFlights", new { id = item.flight_num }) | 
                        <a asp-controller="Home" asp-action="BookFlight" asp-route-id=item.flight_num>ProductName</a>
                    </td>
                </tr>
            }

        </table>

        @*<p>
            @Html.ActionLink("Create New", "AddFlights")
        </p>*@

    </center>
</body>
</html>
